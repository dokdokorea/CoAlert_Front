<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mypageback">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:fontFamily="@font/yoon_gothic340"
        android:gravity="center"
        android:text="MyPage"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="사용자정보"
        android:gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        style="@style/editprofile"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/editprofilevari"
            android:ems="12"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="김영우"/>

    </LinearLayout>
  
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="3dp" />
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 : "
            style="@style/editprofile"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/editprofilevari"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="example@gmail.com"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별 :"
            style="@style/editprofile"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/sex"
            android:entries="@array/sex"></Spinner>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피부타입 :"
            style="@style/editprofile"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/skin_type"
            android:entries="@array/skin_type"></Spinner>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일 :"
            style="@style/editprofile"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/year"
            android:entries="@array/date_year"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/editprofilevari"
            android:text="년"
            android:textSize="18sp"/>

        <Spinner
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/month"
            android:entries="@array/date_month"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/editprofilevari"
            android:text="월"
            android:textSize="18sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/day"
            android:entries="@array/date_day"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/editprofilevari"
            android:text="일"
            android:textSize="18sp"/>


    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:text="  회원탈퇴"
        android:id="@+id/broke"
        style="@style/editprofile"
        android:gravity="left|center"
        android:onClick="FloatingPopup"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/fourth"
            android:text="적용"
            android:fontFamily="@font/yoon_gothic330"
            android:textSize="28dp"
            android:textColor="#fff"
            android:id="@+id/editbtn"/>

    </LinearLayout>



</LinearLayout>