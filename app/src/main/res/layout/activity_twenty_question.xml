<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first"
    android:gravity="center"
    android:orientation="vertical">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/coalert_logo"
        android:id="@+id/icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoAlert"
        style="@style/detailreviewTitle"
        android:layout_marginBottom="30dp"/>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/twenty_question_border"
       android:gravity="center"
       android:padding="20dp"
       android:id="@+id/center_question"
       android:layout_marginBottom="100dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:text="Question"
           android:id="@+id/question"
           android:textColor="#0B0B61"
           android:textSize="40dp"
           style="@style/detailreviewTitle"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginTop="30dp">

           <Button
               android:layout_width="80dp"
               android:layout_height="50dp"
               android:id="@+id/nobtn"
               android:text="NO"/>

           <android.support.v4.widget.Space
               android:layout_width="30dp"
               android:layout_height="50dp"/>

           <Button
               android:layout_width="80dp"
               android:layout_height="50dp"
               android:id="@+id/sosobtn"
               android:text="Soso"/>

           <android.support.v4.widget.Space
               android:layout_width="30dp"
               android:layout_height="50dp"/>

           <Button
               android:layout_width="80dp"
               android:layout_height="50dp"
               android:id="@+id/yesbtn"
               android:text="YES"/>

       </LinearLayout>

   </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright by CoAlert"
        android:textSize="15dp"/>


</LinearLayout>