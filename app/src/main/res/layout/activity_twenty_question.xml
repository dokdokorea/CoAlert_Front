<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/coalert_logo" />

    <TextView
        style="@style/detailreviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="CoAlert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/twenty_question_border"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/container">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/question_page">

            <TextView
                android:id="@+id/question"
                style="@style/detailreviewTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Question"
                android:textColor="#0B0B61"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nobtn"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="아니오" />

                <android.support.v4.widget.Space
                    android:layout_width="30dp"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/sosobtn"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="모름" />

                <android.support.v4.widget.Space
                    android:layout_width="30dp"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/yesbtn"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="네" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/result_view"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert type here"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/detailreviewTitle"
                android:id="@+id/skin_type_result"
                android:textSize="50dp"
                android:textColor="#0B0B61"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:id="@+id/retest"
                        android:text="retest"/>

                    <android.support.v4.widget.Space
                        android:layout_width="40dp"
                        android:layout_height="50dp" />

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:id="@+id/gotype"
                        android:text="goType"/>


                </LinearLayout>


            </LinearLayout>




        </FrameLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright by CoAlert"
        android:textSize="15dp" />


</LinearLayout>