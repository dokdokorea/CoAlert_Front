<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_follower_list_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_follower_list_circleimageview"
                android:layout_width="0dp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_weight="2"
                android:src="@drawable/face1"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    style="@style/editprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name" />

                <TextView
                    android:id="@+id/item_follower_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/item_follower_list_follower_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_weight="4"
                android:contextClickable="true" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>