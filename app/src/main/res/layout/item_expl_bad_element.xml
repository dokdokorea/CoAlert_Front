<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/bad_element_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/bad_ele_rank"
                style="@style/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="@string/bad_element_rank" />


            <TextView
                android:id="@+id/bad_element_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/yoon_gothic320"
                android:gravity="start|center_vertical"
                android:layout_marginStart="10dp"
                android:text="아메리카노 좋아 좋아 좋아 성분"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>