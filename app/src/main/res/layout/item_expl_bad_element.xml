<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/bad_element_card"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp">

            <TextView
                android:id="@+id/bad_ele_rank"
                style="@style/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="@string/bad_element_rank" />


            <TextView
                android:id="@+id/bad_element_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/yoon_gothic320"
                android:gravity="start|center_vertical"
                android:layout_marginStart="@dimen/_7sdp"
                android:text="아메리카노 좋아 좋아 좋아 성분"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>