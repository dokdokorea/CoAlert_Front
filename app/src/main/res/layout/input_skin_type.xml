<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cosmetic_background"
    android:orientation="vertical"
    >

        <Space
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/layout_edge"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/yoon_gothic340"
                android:gravity="center"
                android:text="당신의 피부 타입은 무엇입니까?"
                android:textColor="#424242"
                android:textSize="19sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Spinner
                android:id="@+id/spinner_skin_type"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="@style/defaultFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/round_conrfirm_button"
                    android:text="확인"
                    android:textColor="@color/whiteBackground"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

</LinearLayout>