<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cosmetic_back_btn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/left_btn" />

                <TextView
                    android:id="@+id/cosmetic_prod_name"
                    style="@style/cosmetic_prod_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="@string/cosmetic_pd_name"
                    android:paddingStart="60dp"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/cosmetic_info_write_review"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#00ffffff"
                    android:fontFamily="@font/yoon_gothic320"
                    android:text="@string/write_revw" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:scaleType="fitCenter"
                android:src="@drawable/cardview1" />

            <TextView
                android:id="@+id/cosmetic_product_name"
                style="@style/company_nm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.02"
                android:text="@string/company_name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.04"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cosmetic_element"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="@font/yoon_gothic320"
                    android:text="@string/see_cosmetic_element"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/right_btn" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>