<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WhatSelectKindCosmetic"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/first">

        <ImageView
            android:id="@+id/what_back_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/clicking_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:fontFamily="@font/yoon_gothic340"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="@string/recommend_cosmetic"
            android:textSize="@dimen/_18sdp"
            android:textColor="#fff"
            android:background="@color/tab_skintype_color"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/coalert_logo"
            android:layout_gravity="end|center"
            android:layout_marginLeft="@dimen/_10sdp"/>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_gravity="center_vertical"
        android:id="@+id/selectKindCosmetic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:text="@string/what_select_kind_bottom_textView"
        android:gravity="center|top"
        android:textSize="@dimen/_15sdp"
        android:paddingTop="@dimen/_7sdp"/>

</LinearLayout>