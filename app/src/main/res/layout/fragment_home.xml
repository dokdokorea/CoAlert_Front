<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/first">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/coalert_logo_word" />

        <ImageButton
            android:id="@+id/home_notification_icon_btn"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@drawable/clicking_empty_to_gray_background"
            android:scaleType="centerInside"
            android:src="@drawable/notification" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="@dimen/_3sdp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/detail_element_info_btn"
                    style="@style/main_buton_style"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/main_bad_ingre_background">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center|top"
                        android:layout_marginBottom="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/siren" />

                    <TextView
                        style="@style/main_button_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/for_more_information" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/suggest_cosmetics"
                    style="@style/main_buton_style"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@drawable/main_recommendation_bacground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="@dimen/_19sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/recommendation_icon" />

                    <TextView
                        style="@style/main_button_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/cosmetic_recommendation" />
                </FrameLayout>
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_7sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp">

                    <TextView
                        style="@style/point_font"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/hot_youtuber" />

                    <ImageButton
                        android:id="@+id/main_youtube_next_btn"
                        style="@style/editprofile"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/clicking_empty_to_gray_background"
                        android:scaleType="centerInside"
                        android:src="@drawable/clicking_next_btn_white_background" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hot_youtuber_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/shadow" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp">

                    <TextView
                        style="@style/point_font"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/new_product" />

                    <ImageButton
                        style="@style/editprofile"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:src="@drawable/clicking_next_btn_white_background"
                        android:textColor="#fff" />


                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/new_product_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_7sdp"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBackground"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp">

                    <TextView
                        style="@style/point_font"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/hot_review" />


                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/best_review_preview_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/best_review_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageButton
                    style="@style/editprofile"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/clicking_next_btn_white_background"
                    android:textColor="#fff" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_7sdp"
                android:background="@drawable/shadow" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>