<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                style="@style/logo_style"
                android:text="회원가입" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp">

                <TableRow>

                    <TextView
                        android:id="@+id/user_name"
                        style="@style/signup_item_text_style"
                        android:paddingEnd="@dimen/_30sdp"
                        android:paddingStart="@dimen/_30sdp"
                        android:text="이름"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/emailSignUpInputname"
                        android:layout_marginStart="@dimen/_4sdp"
                        style="@style/defaultFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="13"
                        android:inputType="text" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/signup_item_text_style"
                        android:paddingEnd="@dimen/_25sdp"
                        android:paddingStart="@dimen/_25sdp"
                        android:text="이메일"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/input_email"
                        style="@style/defaultFont"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="14"
                        android:hint="coalert@example.com"
                        android:inputType="textWebEmailAddress" />

                    <Button
                        android:id="@+id/email_redundancy_check_btn"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/default_button"
                        android:fontFamily="@font/kopub_medium"
                        android:text="중복확인"
                        android:textColor="@android:color/white" />

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/signup_item_text_style"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingStart="@dimen/_20sdp"
                        android:text="비밀번호"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/input_password"
                        style="@style/defaultFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="14"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:hint="6~12자리 숫자 또는 문자"
                        android:inputType="textPassword" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/signup_item_text_style"
                        android:text="비밀번호확인"
                        android:textSize="@dimen/_12sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_7sdp"/>

                    <EditText
                        android:id="@+id/password_certification"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/not_same_password"
                        android:id="@+id/passwordCheck"/>
                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />


            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/lastSignUpButton"
            style="@style/defaultFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/press_button"
            android:text="다음"
            android:textColor="@color/whiteBackground" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>