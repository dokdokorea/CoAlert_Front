<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints"
    android:background="@drawable/clicking_white_btn"
    >


    <ImageButton
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="bottom|center"
        android:background="@color/emptyBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/clicking_bluecamera"
        android:layout_marginTop="@dimen/_160sdp"
        android:layout_marginBottom="@dimen/_20sdp"/>

    <TextView
        style="@style/defaultFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_gravity="center"
        android:text="당신의 화장대를 찍어보세요."
        android:textSize="@dimen/_23sdp"
        />


</LinearLayout>