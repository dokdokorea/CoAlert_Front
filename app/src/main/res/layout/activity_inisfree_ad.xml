<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeeef"
    android:orientation="vertical"
    tools:context=".Activity.AdActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_180sdp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/adLogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="#f4f5e4"
            android:scaleType="fitXY"
            android:src="@drawable/ad_inisfree" />
        <ImageView
            android:id="@+id/ad_cosmetic_back_btn"
            style="@style/back_btn_style"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp"
            />
    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_2sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/inisfree_ad_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>