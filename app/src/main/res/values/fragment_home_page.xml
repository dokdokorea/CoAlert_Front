<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="hot_youtuber">핫한 유투브</string>
    <string name="new_product">신상 맛보기</string>
    <string name="hot_review">인기 리뷰</string>

    <string name="for_more_information">유해 성분\n확인</string>
    <string name="cosmetic_recommendation">화장품\n맞춤 추천</string>
    <style name="main_button_text_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_27sdp</item>
        <item name="android:fontFamily">@font/kopub_medium</item>
    </style>

    <style name="main_buton_style">
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


    <string name="lip_sec">LIP</string>
    <string name="body_sec">BODY</string>
    <string name="eye_shadow_sec">EYE SHADOW</string>
    <string name="suncream_sec">SUNCREAM</string>
    <string name="foundation_sec">FOUNDATION</string>


    <style name="point_font">
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:textColor">@color/first</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
    </style>

    <style name="recommendation_product_list">
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/divide_line</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>
    </style>

    <style name="image_format">
        <item name="android:layout_height">@dimen/_73sdp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="image_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
    </style>
</resources>