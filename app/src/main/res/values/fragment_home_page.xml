    <style name="more_information_font">
        <item name="android:fontFamily">@font/web_kid9</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_bad_element_font">
        <item name="android:fontFamily">@font/yoon_gothic330</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="point_font">
        <item name="android:fontFamily">@font/head_eb</item>
        <item name="android:textColor">@color/first</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="recommendation_product_list">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/divide_line</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="image_format">
        <item name="android:layout_height">100dp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="image_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
