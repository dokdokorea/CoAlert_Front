<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="logoStyle">
        <item name="android:fontFamily">@font/helvetica_neueltstd_lt</item>
        <item name="android:textColor">@color/first</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="defaultFont">
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>

    <style name="mypageStyle">
        <item name="android:fontFamily">@font/yoon_gothic330</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>

    <style name="editprofile">
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/sixth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editprofilevari">
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
