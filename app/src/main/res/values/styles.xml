<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_outline">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="barFrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@color/first</item>
    </style>

    <style name="LayoutTopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@color/first</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="back_btn_style">
        <item name="android:src">@drawable/clicking_back_btn</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/_33sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/emptyBackground</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="black_back_btn_style">
        <item name="android:src">@drawable/clicking_pink_back_btn</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@color/emptyBackground</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="barTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="logo_style">
        <item name="android:fontFamily">@font/kopub_bold</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:background">@color/emptyBackground</item>
        <item name="android:textColor">@color/first</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="defaultFont">
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>
    <style name="whiteTextStyleSeeMyReviewsSub">
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="mypageStyle">
        <item name="android:fontFamily">@font/yoon_gothic330</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>

    <style name="editprofile">
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>


    <style name="editprofilevari">
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="detailreviewTitle">
        <item name="android:fontFamily">@font/yoon_gothic350</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>

    <style name="detailreviewContext">
        <item name="android:fontFamily">@font/yoon_gothic320</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/sixth</item>
    </style>

    <style name="company_in_cosmetic_item">
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/fifth</item>
    </style>

    <style name="name_in_cosmetic_item">
        <item name="android:fontFamily">@font/kopub_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/sixth</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="name_in_cosmetic_information">
        <item name="android:fontFamily">@font/bm_dohyen</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/sixth</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
